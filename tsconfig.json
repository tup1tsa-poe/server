{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "skipLibCheck": false,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "rootDir": "src",
    "sourceMap": false,
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}
